@import '../theme.styl'

.app-preloader
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  background-color: $primaryColor
  z-index: 1050
  .loader-container
    height: auto
    .loader-active
      left: calc(50% - 14.5px)
  .app-preloader-error
    color: white
    font-weight: bold
    padding: 20px 30px
    background-color: $red
  .app-preloader-center-outer
    width: 100%
    height: 100%
    padding: 0
    margin: 0
    display: table !important
    .app-preloader-center-middle
      margin: 0
      padding: 0
      vertical-align: middle
      display: table-cell !important
      text-align: center
      img
        width: 220px
        height: 65px
        opacity: 0
        margin-bottom: 50px
        transition: 0.5s linear opacity
        will-change: opacity
        &.loaded
          opacity: 1
