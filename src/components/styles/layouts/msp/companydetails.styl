@import '../../theme.styl'

.companydetails
  .row
    margin: 0
    height: 300px
    display: flex
    justify-content: space-between
    flex-direction: row
    vertical-align: top
    & > .card
      width: ("calc(25% - %s / 6)" % $baseMargin)
      margin: 0 $baseMargin / 2
      &:first-child
        margin-left: 0
      &:last-child
        margin-right: 0
  .account-details
    .card
      height: 300px
